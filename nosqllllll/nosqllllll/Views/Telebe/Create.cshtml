@model nosqllllll.Models.Telebe

@{
    ViewData["Title"] = "Yeni Tələbə Yarat";
}

<!DOCTYPE html>
<html lang="az">
<head>
    <meta charset="UTF-8">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" />
</head>
<body>
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <h3 class="text-center mb-4">Yeni Tələbə Yarat</h3>

                <form asp-action="Create" method="post" class="p-4 border rounded shadow-sm bg-light">
                    <div class="mb-3">
                        <label for="Ad" class="form-label">Ad</label>
                        <input type="text" class="form-control" id="Ad" name="Ad" required />
                    </div>

                    <div class="mb-3">
                        <label for="Soyad" class="form-label">Soyad</label>
                        <input type="text" class="form-control" id="Soyad" name="Soyad" required />
                    </div>

                    <div class="mb-3">
                        <label for="AtaAd" class="form-label">Ata Adı</label>
                        <input type="text" class="form-control" id="AtaAd" name="AtaAd" required />
                    </div>

                    <div class="mb-3">
                        <label for="Qrup" class="form-label">Qrup</label>
                        <input type="text" class="form-control" id="Qrup" name="Qrup" required />
                    </div>

                    <div class="mb-3">
                        <label for="Cins" class="form-label">Cins</label>
                        <select class="form-select" id="Cins" name="Cins">
                            <option value="Kişi">Kişi</option>
                            <option value="Qadın">Qadın</option>
                        </select>
                    </div>

                    <div class="mb-3">
                        <label for="Ortalama" class="form-label">Ortalama</label>
                        <input type="number" class="form-control" id="Ortalama" name="Ortalama" step="0.01" required />
                    </div>

                    <div class="mb-4">
                        <label for="Teqaud" class="form-label">Təqaüd</label>
                        <select class="form-select" id="Teqaud" name="Teqaud">
                            <option value="Almır">Almır</option>
                            <option value="Adi">Adi</option>
                            <option value="Zərbəçi">Zərbəçi</option>
                            <option value="Əlaçı">Əlaçı</option>
                        </select>
                    </div>

                    <div class="d-grid">
                        <button type="submit" class="btn btn-success">Təsdiq Et</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
